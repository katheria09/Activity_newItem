<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#E6E6E6"
        android:dividerHeight="0px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice_item"
                android:text="$20"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginRight="44dp"
                android:layout_marginEnd="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tvName_item"
                android:layout_marginLeft="27dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="27dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/radio"
                android:layout_toEndOf="@+id/radio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCategory_item"
                android:text="Category"
                android:textColor="@color/black"
                android:textSize="12sp"


                android:layout_alignBaseline="@+id/radio"
                android:layout_alignBottom="@+id/radio"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>